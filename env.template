# Real Estate Platform - Environment Configuration Template
# ========================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=real_estate_platform

# For production, use a secure MongoDB connection string:
# MONGODB_URL=mongodb://username:password@host:port/database?authSource=admin

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret Key - MUST be changed in production!
# Generate a secure key: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-please

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Password hashing
BCRYPT_ROUNDS=12

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Settings - Add your frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# FACEBOOK INTEGRATION (Optional)
# =============================================================================
# Get these from Facebook Developer Console
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# Facebook Page Mappings (JSON format)
FACEBOOK_PAGE_MAPPINGS={"en": "page_id_english", "mr": "page_id_marathi"}

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx

# Upload directory
UPLOAD_DIR=uploads

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GOOGLE_ANALYTICS_ID=your-ga-id

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Set to False in production
DEBUG=False

# Security settings for production
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Session security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode in development
DEBUG=True

# Disable security features in development
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database
TEST_DATABASE_NAME=real_estate_platform_test

# Test JWT secret
TEST_JWT_SECRET_KEY=test-secret-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_MULTILANGUAGE=True
ENABLE_FACEBOOK_INTEGRATION=True
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_ANALYTICS=True
ENABLE_AI_FEATURES=True

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# OpenAI API (for AI features)
OPENAI_API_KEY=your-openai-api-key

# Groq API (for AI features - faster alternative to OpenAI)
GROQ_API_KEY=your-groq-api-key

# Google Maps API (for location features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key