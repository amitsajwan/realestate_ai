# Property Forms Consolidation - Environment Configuration
# =======================================================

# Feature Flags
NEXT_PUBLIC_USE_UNIFIED_FORM=false
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_MARKET_INSIGHTS=true
NEXT_PUBLIC_ENABLE_QUALITY_SCORING=true
NEXT_PUBLIC_ENABLE_MULTILANGUAGE=true
NEXT_PUBLIC_FALLBACK_ON_ERROR=true
NEXT_PUBLIC_ENABLE_AB_TESTING=true

# A/B Testing Configuration
NEXT_PUBLIC_ROLLOUT_PERCENTAGE=10
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=propertyai

# Authentication
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Facebook Integration
FB_APP_ID=your-facebook-app-id
FB_APP_SECRET=your-facebook-app-secret
FB_PAGE_ID=your-facebook-page-id
FB_PAGE_TOKEN=your-facebook-page-token
FB_GRAPH_API_VERSION=v19.0

# AI Services
OPENAI_API_KEY=your-openai-api-key
AI_SERVICE_URL=http://localhost:8001

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Development
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Production
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=info