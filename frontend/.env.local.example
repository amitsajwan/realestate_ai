# Real Estate Platform - Frontend Environment Configuration Template
# ==================================================================
# Copy this file to .env.local and update the values for your environment

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable multi-language support
NEXT_PUBLIC_ENABLE_MULTILANGUAGE=true

# Enable Facebook integration
NEXT_PUBLIC_ENABLE_FACEBOOK_INTEGRATION=true

# Enable AI features
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# Enable analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable email notifications
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=false

# =============================================================================
# FACEBOOK INTEGRATION
# =============================================================================
# Facebook App ID (get from Facebook Developer Console)
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# Facebook API version
NEXT_PUBLIC_FACEBOOK_API_VERSION=v18.0

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
# Google Maps API key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Google Analytics ID
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application name
NEXT_PUBLIC_APP_NAME=PropertyAI

# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Default language
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,mr,hi,gu,ta,te,bn,pa,kn,ml

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Theme settings
NEXT_PUBLIC_DEFAULT_THEME=light

# Enable dark mode
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Enable animations
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in bytes (10MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Allowed file types
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Enable error reporting
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode
NEXT_PUBLIC_DEBUG=true

# Enable development tools
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true

# Mock API responses in development
NEXT_PUBLIC_MOCK_API=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Disable debug mode in production
NEXT_PUBLIC_DEBUG=false

# Disable development tools in production
NEXT_PUBLIC_ENABLE_DEV_TOOLS=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Content Security Policy
NEXT_PUBLIC_CSP_REPORT_URI=/api/csp-report

# Enable HTTPS only in production
NEXT_PUBLIC_FORCE_HTTPS=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Enable service worker
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true

# Enable caching
NEXT_PUBLIC_ENABLE_CACHING=true

# Cache TTL in seconds
NEXT_PUBLIC_CACHE_TTL=3600

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test API URL
NEXT_PUBLIC_TEST_API_URL=http://localhost:8000

# Enable test mode
NEXT_PUBLIC_TEST_MODE=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# OpenAI API key (for AI features)
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key

# Stripe API key (for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================
# Twitter API key
NEXT_PUBLIC_TWITTER_API_KEY=your-twitter-api-key

# LinkedIn API key
NEXT_PUBLIC_LINKEDIN_API_KEY=your-linkedin-api-key

# Instagram API key
NEXT_PUBLIC_INSTAGRAM_API_KEY=your-instagram-api-key