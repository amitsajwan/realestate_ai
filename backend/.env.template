# PropertyAI Backend Environment Configuration
# ===========================================
# Copy this file to .env and update with your actual values

# Database Configuration
# =====================
# Local MongoDB
MONGODB_URL=mongodb://localhost:27017
# MongoDB Atlas (Cloud) - Replace with your connection string
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/

# Database name
DATABASE_NAME=real_estate_platform

# Security Configuration
# =====================
# Generate a secure secret key (32+ characters)
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# JWT Algorithm
ALGORITHM=HS256

# Token expiration time (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Features Configuration
# =========================
# Get your API key from https://console.groq.com/
GROQ_API_KEY=your-groq-api-key-here

# CORS Configuration
# ==================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Development Settings
# ===================
# Set to True for development, False for production
DEBUG=True

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Rate Limiting
# =============
# API rate limit (requests per minute)
API_RATE_LIMIT=100

# Login rate limit (attempts per minute)
LOGIN_RATE_LIMIT=5

# Email Configuration (Optional)
# ==============================
# SMTP settings for email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=True

# File Upload Configuration
# =========================
# Maximum file size (in bytes)
MAX_FILE_SIZE=10485760  # 10MB

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Upload directory
UPLOAD_DIR=uploads

# Redis Configuration (Optional)
# =============================
# Redis URL for caching and session storage
# REDIS_URL=redis://localhost:6379

# Production Settings
# ===================
# Set to True in production
# PRODUCTION=True

# Domain for production
# PRODUCTION_DOMAIN=your-domain.com

# SSL settings
# SSL_REDIRECT=True